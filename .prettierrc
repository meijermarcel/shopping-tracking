{
    "singleQuote": true,
    "printWidth": 120,
    "editor.formatOnSave": true,
    "proseWrap": "always",
    "tabWidth": 2,
    "requireConfig": false,
    "useTabs": false,
    "trailingComma": "none",
    "bracketSpacing": true,
    "jsxBracketSameLine": false,
    "semi": true,
    "htmlWhitespaceSensitivity": "ignore",
    "overrides": [
        {
            "files": "{apps,libs}/**/*.html",
            "options": {
                "parser": "angular"
            }
        }
    ]
}
